{
  "manifest_version": 2,
  "name": "CaptionClip",
  "version": "1.3",
  "description": "Extract YouTube video transcripts with one click. Instantly copy closed captions/subtitles to your clipboard.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
